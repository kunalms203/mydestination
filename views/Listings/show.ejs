<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8  offset-3">
                <h3>Listing Details :</h3>
            </div>
            <div class="show-card col-6  offset-3">
                <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="Listing Image">
                <div class="card-body">
                    <p class="card-text mt-2">
                        <b>
                            <%= listing.title %>
                        </b><br>
                        <%= listing.description %> <br>
                            &#8377 <%= listing.price.toLocaleString('en-IN') %> <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %> <br>
                    </p>

                </div>
            </div>



        </div>
        <div class="btns pt-3"><a class="btn btn-dark col-1 offset-3 edit-btn" href="/Listings/<%=listing._id%>/edit">EDIT</a>
            <form method="post" action="/Listings/<%=listing.id%>?_method=DELETE">
                <button class="btn btn-dark offset-5 add-btn">DELETE</button>
            </form>
        </div>
    </body>