<% layout("/layouts/boilerplate.ejs") %>
<body>
<div class="box">
  <%= success %>
  <H1 class="pt-3 pb-2">All Listings</H1>
  <div class="row row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 row row-cols-md-3 row row-cols-sm-2">
    <% for(listing of alllistings) {%>
      <a href="/Listings/<%= listing._id %>" class="listing-a">
      <div class="card card-listing">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
           <b> <%= listing.title %> </b> <br>
            &#x20B9 <%= listing.price.toLocaleString('en-IN') %> <br>
          </p>
        </div>
      </div>
    </a>
      <% } %> 
  </div>
</div>
</body>

