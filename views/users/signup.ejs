<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="col-6 offset-5 mt-3 mb-3">SignUP</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST"class="needs-validation" novalidate>
      <div class="mt-2">
        <label for="username" class="form-label " >Username</label>
        <input
          name="username"
          id = "username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">looksgood</div>
        <div class="invalid-feedback">Plese enter valid Title !</div>
      </div >
      <div class="mt-2">
        <label for="email" class="form-label">E-mail</label>
        <input
          name="email"
          id = "email"
          type="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Plese enter email !</div>
      </div>
      <div class="mt-2">
        <label for="password" class="form-label">password</label>
        <input
          name="password"
          id = "password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Plese enter Password !</div>
      </div>
      <button class="btn btn-success mt-3" > signup</button>
    </form>
  </div>
</div>
